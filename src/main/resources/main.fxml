<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" id="AnchorPane" prefHeight="810.0" prefWidth="821.0"
            xmlns="http://javafx.com/javafx/8" fx:controller="gui.MainController">

    <children>
        <Button layoutX="258.0" layoutY="188.0" mnemonicParsing="false" onAction="#runAlgorithm" prefWidth="85.0"
                text="Uruchom"/>
        <VBox layoutX="0.0" prefHeight="200.0" prefWidth="200.0">
            <children>
                <Label text="Rozmiar populacji"/>
                <TextField fx:id="populationSizeTextField" text="128"/>
                <Label text="Liczba taktów"/>
                <TextField fx:id="numbersOfMeasuresTextField" text="1"/>
                <Label text="Wybierz typ skali"/>
                <ChoiceBox fx:id="scaleType" prefWidth="150.0"/>
                <Label text="Wybierz dźwięk bazowy skali"/>
                <ChoiceBox fx:id="baseScaleNote" prefWidth="150.0"/>
            </children>
        </VBox>
        <VBox layoutX="400.0" prefHeight="200.0" prefWidth="200.0">
            <children>
                <Label text="Rodzaj mutacji"/>
                <ChoiceBox fx:id="mutations" prefWidth="150.0"/>
                <Label text="Prawdopodobienstwo mutacji"/>
                <TextField fx:id="mutationRateTextField" text="0.3"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
